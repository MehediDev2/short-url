<!doctype html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Document</title>
    <style>
      body {
        display: flex;
        align-items: center;
        justify-content: center;
        flex-direction: column;
        font-family: Verdana, Geneva, Tahoma, sans-serif;
      }
      form {
        width: 40%;
        display: flex;
        align-items: center;
        justify-content: center;
        flex-direction: column;
      }
      </style>
      <!-- bootstrap links -->
      <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-T3c6CoIi6uLrA9TneNEoa7RxnatzjcDSCmG1MXxSR1GAsXEV/Dwwykc2MPK8M2HN" crossorigin="anonymous">
  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js" integrity="sha384-C6RzsynM9kWDrMNeT87bh95OGNyZPhcTNXj1NW7RuBCsyN/o0jlpcV8Qyq46cDfL" crossorigin="anonymous"></script>
  </head>
  <body>
    <h1 class="mt-4">URL Shortener</h1>
    <p style="font-size: 18px; margin-bottom: 0;">Enter your original URL</p>
    <form method="post" action="/url">
      <input 
        class="form-control"
        style="margin: 15px 0px; padding: 7px 10px; font-size: 16px; max-width: 400px;"
        type="text"
        name="url"
        placeholder="https://example.com"
      />
      <button class="btn btn-dark" style="display: block; padding: 6px 15px" type="submit">
        Generate
      </button>
    </form>
    <% if (locals.id) { %>
      <p class="mt-3"> URL Generated: <span class="fw-bold">http://localhost:3000/url/<%= id %></span><p>
    <% } %>
    <div class="mt-5">
      <% if (locals.urls) { %>
       <table class="table">
        <thead class="table-dark">
          <th>No.</th>
          <th>Short ID</th>
          <th>Redirect Url</th>
          <th>Clicks</th>
        </thead>
        <tbody>
          <% urls.forEach((url, index) => { %>
           <tr>
            <td><%= index + 1 %></td>
            <td><%= url.shortId %></td>
            <td><%= url.redirectURl %></td>
            <td><%= url.visitHistory.length %></td>
           </tr>
          <% }) %>
        </tbody>
       </table>
      <% } %>
    </div>
  </body>
</html>
